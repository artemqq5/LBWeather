<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".other.dialogs.DialogListLocations">

    <Button
        android:id="@+id/currentLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:drawablePadding="8dp"
        android:textSize="18sp"
        android:fontFamily="@font/open_sans_2"
        android:gravity="center"
        android:backgroundTint="@android:color/transparent"
        android:text="@string/current"
        android:textColor="@color/b4"
        app:drawableEndCompat="@drawable/ic_earth"
        app:layout_constraintBottom_toBottomOf="@+id/addNewLocation"
        app:layout_constraintEnd_toStartOf="@+id/addNewLocation"
        app:layout_constraintTop_toTopOf="@+id/addNewLocation" />

    <ImageButton
        android:id="@+id/addNewLocation"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="20dp"
        android:background="@drawable/ic_add_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/list_of_location"
        app:layout_constraintBottom_toBottomOf="@+id/addNewLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/addNewLocation" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerLocation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addNewLocation"
        tools:listitem="@layout/item_location" />




</androidx.constraintlayout.widget.ConstraintLayout>