<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:title="@string/displayDataDay"
        app:iconSpaceReserved="false">

        <CheckBoxPreference
            app:key="chance_rain_day"
            android:defaultValue="true"
            app:title="@string/rainChance"
            app:iconSpaceReserved="false"/>

        <CheckBoxPreference
            app:key="chance_snow_day"
            android:defaultValue="true"
            app:title="@string/snowChance"
            app:iconSpaceReserved="false"/>

        <CheckBoxPreference
            app:key="uv_index_day"
            android:defaultValue="true"
            app:title="@string/uvIndex"
            app:iconSpaceReserved="false"/>
    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/displayDataHour"
        app:iconSpaceReserved="false">

        <CheckBoxPreference
            app:key="chance_rain_hour"
            android:defaultValue="true"
            app:title="@string/rainChance"
            app:iconSpaceReserved="false"/>

        <CheckBoxPreference
            app:key="chance_snow_hour"
            android:defaultValue="true"
            app:title="@string/snowChance"
            app:iconSpaceReserved="false"/>

        <CheckBoxPreference
            app:key="uv_index_hour"
            android:defaultValue="true"
            app:title="@string/uvIndex"
            app:iconSpaceReserved="false"/>

        <CheckBoxPreference
            app:key="feel_temp_hour"
            android:defaultValue="true"
            app:title="@string/temperatureFeels"
            app:iconSpaceReserved="false"/>
    </PreferenceCategory>
</PreferenceScreen>