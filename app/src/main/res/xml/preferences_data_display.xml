<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:title="Відображення інформації про день"
        app:iconSpaceReserved="false">

        <CheckBoxPreference
            app:key="chance_rain_day"
            android:defaultValue="true"
            app:title="Ймовірність дощу"
            app:iconSpaceReserved="false"/>

        <CheckBoxPreference
            app:key="chance_snow_day"
            android:defaultValue="true"
            app:title="Ймовірність снігу"
            app:iconSpaceReserved="false"/>

        <CheckBoxPreference
            app:key="uv_index_day"
            android:defaultValue="true"
            app:title="Ультрафіолетовий індекс"
            app:iconSpaceReserved="false"/>
    </PreferenceCategory>

    <PreferenceCategory
        app:title="Відображення інформації погодинно"
        app:iconSpaceReserved="false">

        <CheckBoxPreference
            app:key="chance_rain_hour"
            android:defaultValue="true"
            app:title="Ймовірність дощу"
            app:iconSpaceReserved="false"/>

        <CheckBoxPreference
            app:key="chance_snow_hour"
            android:defaultValue="true"
            app:title="Ймовірність снігу"
            app:iconSpaceReserved="false"/>

        <CheckBoxPreference
            app:key="uv_index_hour"
            android:defaultValue="true"
            app:title="Ультрафіолетовий індекс"
            app:iconSpaceReserved="false"/>

        <CheckBoxPreference
            app:key="feel_temp_hour"
            android:defaultValue="true"
            app:title="Температура по відчуттям"
            app:iconSpaceReserved="false"/>
    </PreferenceCategory>
</PreferenceScreen>