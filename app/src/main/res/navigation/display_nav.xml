<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_display"
    app:startDestination="@id/loadingFragment">

    <fragment
        android:id="@+id/displayWeather"
        android:name="com.lbweather.getweatherfromall.presentation.displayFragment.DisplayWeather"
        android:label="@string/fragment_display"
        tools:layout="@layout/fragment_display_weather">
        <action
            android:id="@+id/action_displayWeather_to_dialogListLocations"
            app:destination="@id/dialogListLocations" />
        <action
            android:id="@+id/action_displayWeather_to_settings"
            app:destination="@id/settings" />
    </fragment>
    <dialog
        android:id="@+id/dialogListLocations"
        android:name="com.lbweather.getweatherfromall.presentation.locationsFragment.DialogListLocations"
        android:label="dialog_locations"
        tools:layout="@layout/dialog_locations">
        <action
            android:id="@+id/action_dialogListLocations_to_displayWeather"
            app:destination="@id/displayWeather" />
    </dialog>
    <fragment
        android:id="@+id/loadingFragment"
        android:name="com.lbweather.getweatherfromall.presentation.loadingFragment.LoadingFragment"
        android:label="fragment_loading"
        tools:layout="@layout/fragment_loading">
        <action
            android:id="@+id/action_loadingFragment_to_displayWeather"
            app:destination="@id/displayWeather"
            app:popUpTo="@id/nav_display"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/settings"
        android:name="com.lbweather.getweatherfromall.presentation.settingsFragment.Settings"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />

</navigation>